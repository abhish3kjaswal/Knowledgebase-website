extends layout

block content
    h2 Create new account / Register
    form(method='POST', action='/users/register')
      #form-group
        label Name:
        input.form-control(name='name',type='text',autocomplete="off")
      #form-group
        label Email:
        input.form-control(name='email',type='email',autocomplete="off")
      #form-group
        label Username:
        input.form-control(name='username',type='text',autocomplete="off")
      #form-group
        label Password:
        input.form-control(name='password',type='password')
      #form-group
        label Confirm password:
        input.form-control(name='password2',type='password')
      br
      input.btn.btn-primary(type='submit' value='Register')
