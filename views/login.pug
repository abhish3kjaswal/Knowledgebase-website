extends layout

block content
    h2 Login to your account
    form(method='POST', action='/users/login')
      #form-group
        label Username:
        input.form-control(name='username',type='text',autocomplete="on")
      #form-group
        label Password:
        input.form-control(name='password',type='password')
      br
      input.btn.btn-primary(type='submit' value='Log In')
  
